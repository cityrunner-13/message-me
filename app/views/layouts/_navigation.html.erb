<div class="ui inverted small menu attached">
  <div class="ui container">
    <%= link_to "Chatroom", root_path, class: "item" %>
    <%# Can also use the code below for the same result %>
    <!-- <a href="<%= root_path %>" class="item">
      Chatroom
    </a> -->
    <a class="item">
      Messages
    </a>
    <div class="right menu">
      <div class="ui dropdown item">
        Account <i class="dropdown icon"></i>
        <div class="menu">
          <% if !logged_in? %>
            <%= link_to "Log In", login_path, class: "item" %>
          <% else %>
            <%= link_to "Log Out", logout_path, method: :delete, class: "item" %>
          <% end %>
        </div>
      </div>
      <% if !logged_in? %>
        <div class="item">
            <%= link_to "Log In", login_path, class: "ui teal button" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
