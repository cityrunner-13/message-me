<h2 class="ui center aligned medium icon header">
  <i class="circular teal inverted clone outline icon"></i>
  MessageMe
</h2>

<div class="ui two column grid">
  <div class="twelve wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content" id="messages">
        <!-- id is called in coffeescript file to data is appended -->
        <div class="ui feed" id="message-container">
          <!-- Calls messages partial -->
          <%= render @messages %>
        </div>
      </div>
      <div class="extra content">
        <%= form_for(@message, html: {class: "ui reply form", role: "form"}, url: message_path, remote: true) do |f| %>
            <%# Renders for without HTTP request, put after "form" %>
            <%# remote: true, method: :get, id: 'msg-lookup-form'}, :method=> 'post' %>
          <div class="field">
            <div class="ui fluid icon input">
              <%= f.text_field :body %>
              <%= f.button '<i class="bordered inverted purple edit icon"></i>'.html_safe %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="four wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content">
        <div class="ui purple inverted vertical menu">
          <a class="active item">
            Users
          </a>
          <% @users.each do |user| %>
            <a class="item">
              <%= user.username %>
            </a>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
