<h1 class="ui center aligned header">
  Welcome to <i>MessageMe</i>
</h1>
<h4 class="ui center aligned medium icon header">
  <i class="circular teal inverted power off icon"></i>
  Sign in to continue
</h4>

<div class="ui placeholder fluid raised segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
      <%= form_for(:session, html: {class: "ui form", role: "form"}, url: login_path) do |f| %>
        <div class="field">
          <div class="ui left icon input">
            <%= f.text_field :username, placeholder: "Username" %>
            <i class="user icon"></i>
          </div>
        </div>
        <div class="field">
          <div class="ui left icon input">
            <%= f.password_field :password, placeholder: "Password" %>
            <i class="lock icon"></i>
          </div>
        </div>
        <%= f.button "Log In", class: "fluid medium ui purple submit button" %>
      <% end %>
    </div>
    <div class="middle aligned column">
      <%= link_to signup_path, class: "ui purple big button" do %>
        <i class="signup icon"></i>
        Sign Up
      <% end %>
    </div>
  </div>
  <div class="ui vertical divider">
    Or
  </div>
</div>
